<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="vertical"
    android:background="@color/background_white">


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_light_green" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <LinearLayout
            android:id="@+id/live_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <CheckBox
                android:id="@+id/live_check"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/live_button_select"
                android:button="@null" />
        </LinearLayout>


        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/me_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <CheckBox
                android:id="@+id/me_check"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/me_button_select"
                android:button="@null" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>